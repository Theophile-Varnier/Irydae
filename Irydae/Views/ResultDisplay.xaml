<Window x:Class="Irydae.Views.ResultDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Irydae.Views"
        mc:Ignorable="d"
        Title="ResultDisplay"
        SizeToContent="WidthAndHeight"
        Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WebBrowser Name="Browser"/>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Width="700">
            <ScrollViewer>
                <TextBox IsReadOnly="True" TextWrapping="Wrap" Text="{Binding ., Mode=OneWay}" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </Border>
        <Border Grid.Row="2" Margin="10">
            <Button Width="100" Height="36" IsCancel="True" IsDefault="True">OK</Button>
        </Border>
    </Grid>
</Window>
